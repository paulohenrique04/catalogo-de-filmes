<%= form_with(model: @category, class: "needs-validation") do |f| %>

  <% if @category.errors.any? %>
    <div class="alert alert-danger">
      <strong>Foram encontrados erros:</strong>
      <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "Nome da Categoria", class: "form-label" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Informe o nome da categoria" %>
  </div>

  <%= f.submit "Salvar", class: "btn btn-success" %>

<% end %>
