<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0"><%= t('categories.index.title') %></h2>
    <%= link_to t('categories.index.add_category'), new_category_path, class: "btn btn-primary" %>
  </div>

  <% if @categories.any? %>
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th><%= t('categories.index.name') %></th>
          <th style="width: 150px;"><%= t('categories.index.actions') %></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td>
              <%= link_to t('categories.index.edit'), edit_category_path(category), class: "btn btn-sm btn-warning" %>
              <%= link_to t('categories.index.delete'), category_path(category),
                          data: { turbo_method: :delete, turbo_confirm: t('common.messages.are_you_sure') },
                          class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-muted"><%= t('categories.index.no_categories') %></p>
  <% end %>
</div>