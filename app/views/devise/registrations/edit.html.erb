<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm rounded-4 p-4">
        <h2 class="text-center mb-4"><%= t('devise.registrations.edit.edit_profile') %></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <% if resource.errors.any? %>
            <div class="alert alert-danger">
              <h5><%= t('devise.registrations.edit.errors_header', count: resource.errors.count) %></h5>
              <ul class="mb-0">
                <% resource.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :name, class: "form-label" %>
            <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: t('devise.registrations.edit.name_placeholder') %>
          </div>

          <div class="mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: t('devise.registrations.edit.email_placeholder'), autocomplete: "email" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="alert alert-info">
              <%= t('devise.registrations.edit.waiting_confirmation') %>: <%= resource.unconfirmed_email %>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :password, class: "form-label" %>
            <small class="form-text text-muted"><%= t('devise.registrations.edit.leave_blank') %></small>
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted"><%= @minimum_password_length %> <%= t('devise.registrations.edit.minimum_chars') %></small>
            <% end %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          </div>

          <div class="mb-3">
            <%= f.label :current_password, class: "form-label" %>
            <small class="form-text text-muted"><%= t('devise.registrations.edit.we_need_your_current_password') %></small>
            <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
          </div>

          <div class="d-grid mb-3">
            <%= f.submit t('devise.registrations.edit.update'), class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <hr>

        <h4><%= t('devise.registrations.edit.cancel_account') %></h4>
        <div class="mb-3">
          <%= t('devise.registrations.edit.unhappy') %> 
          <%= button_to t('devise.registrations.edit.cancel_account'), registration_path(resource_name), 
              data: { confirm: t('devise.registrations.edit.are_you_sure'), turbo_confirm: t('devise.registrations.edit.are_you_sure') }, 
              method: :delete, class: "btn btn-danger" %>
        </div>

        <%= link_to t('common.actions.back'), :back, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>