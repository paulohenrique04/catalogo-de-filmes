<div class="container mt-4">
  <h1 class="text-center mb-4"><%= t('movies.index.title') %></h1>

  <div class="row mb-4">
    <div class="col-md-12">
      <%= form_with url: movies_path, method: :get, local: true, class: "d-flex flex-wrap gap-2" do %>
        <!-- Campo de busca -->
        <%= text_field_tag :query, params[:query], placeholder: t('movies.index.search_placeholder'), class: "form-control flex-grow-1" %>

        <!-- Filtro por categoria -->
        <%= select_tag :category_id, options_from_collection_for_select(@categories, :id, :name, params[:category_id]), prompt: t('movies.index.filter_category'), class: "form-select" %>

        <!-- Filtro por ano -->
        <%= number_field_tag :year, params[:year], placeholder: t('movies.index.filter_year'), class: "form-control" %>

        <!-- Filtro por diretor -->
        <%= text_field_tag :director, params[:director], placeholder: t('movies.index.filter_director'), class: "form-control" %>

        <!-- BotÃ£o -->
        <%= submit_tag t('movies.index.filter_button'), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="row">
  <% @movies.each do |movie| %>
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title text-center mb-3"><%= movie.title %></h5>
            <div class="text-center mb-3">
              <% if movie.image.attached? %>
                <%= image_tag movie.image, class: "img-fluid rounded", style: "max-height: 300px; object-fit: cover;" %>
              <% else %>
                <div class="border rounded p-4 d-inline-block">
                  <div class="text-muted">
                    <i class="bi bi-image fs-1"></i>
                    <p class="mt-2 mb-0"><%= t('movies.index.no_image') %></p>
                  </div>
                </div>
              <% end %>
            </div>

            <p class="card-text flex-grow-1"><%= truncate(movie.synopsis, length: 150, separator: ' ') %></p>
            
            <div class="mt-auto">
              <div class="d-flex justify-content-between align-items-center text-muted small mb-3">
                <div class="d-flex align-items-center">
                  <i class="bi bi-person-circle me-1"></i>
                  <span>
                    <% if movie.user.present? %>
                      <%= movie.user.name || movie.user.email %>
                    <% else %>
                      <%= t('movies.index.unknown_author') %>
                    <% end %>
                  </span>
                </div>
                
                <div class="d-flex align-items-center">
                  <i class="bi bi-chat-text me-1"></i>
                  <span>
                    <%= movie.comments.size %> 
                    <%= t('movies.index.comments', count: movie.comments.size) %>
                  </span>
                </div>
              </div>
              
              <%= link_to movie_path(movie), class: "btn btn-primary w-100" do %>
                <i class="bi bi-eye me-1"></i>
                <%= t('movies.index.view_details') %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <% if @movies.empty? %>
    <div class="text-center mt-4">
      <p class="text-muted"><%= t('common.messages.no_records') %></p>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @movies %>
  </div>
</div>