<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Categorias</h2>
    <%= link_to "Adicionar Categoria", new_category_path, class: "btn btn-primary" %>
  </div>

  <% if @categories.any? %>
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Nome</th>
          <th style="width: 150px;">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td>
              <%= link_to "Editar", edit_category_path(category), class: "btn btn-sm btn-warning" %>
              <%= link_to "Excluir", category_path(category),
                          data: { turbo_method: :delete, turbo_confirm: "Tem certeza?" },
                          class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="text-muted">Nenhuma categoria cadastrada ainda.</p>
  <% end %>
</div>
