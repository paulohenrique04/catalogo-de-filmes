<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <div class="card shadow-sm rounded-4 p-4">
        <h2 class="text-center mb-4">Editar <%= resource_name.to_s.humanize %></h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <% if resource.errors.any? %>
            <div class="alert alert-danger">
              <h5><%= pluralize(resource.errors.count, "erro") %> impediram que suas alterações fossem salvas:</h5>
              <ul class="mb-0">
                <% resource.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :name, "Nome", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", autofocus: true, placeholder: "Digite seu nome" %>
          </div>

          <div class="mb-3">
            <%= f.label :email, "Email", class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "Digite seu email", autocomplete: "email" %>
          </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div class="alert alert-info">
              Atualmente aguardando confirmação para: <%= resource.unconfirmed_email %>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.label :password, "Nova senha", class: "form-label" %>
            <small class="form-text text-muted">Deixe em branco se não quiser alterar</small>
            <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <small class="form-text text-muted"><%= @minimum_password_length %> caracteres mínimo</small>
            <% end %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmação da nova senha", class: "form-label" %>
            <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password" %>
          </div>

          <div class="mb-3">
            <%= f.label :current_password, "Senha atual", class: "form-label" %>
            <small class="form-text text-muted">Precisamos da sua senha atual para confirmar as alterações</small>
            <%= f.password_field :current_password, class: "form-control", autocomplete: "current-password" %>
          </div>

          <div class="d-grid mb-3">
            <%= f.submit "Atualizar", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>

        <hr>

        <h4>Cancelar minha conta</h4>
        <div class="mb-3">
          Insatisfeito? 
          <%= button_to "Cancelar minha conta", registration_path(resource_name), 
              data: { confirm: "Tem certeza que deseja cancelar sua conta?", turbo_confirm: "Tem certeza?" }, 
              method: :delete, class: "btn btn-danger" %>
        </div>

        <%= link_to "Voltar", :back, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
