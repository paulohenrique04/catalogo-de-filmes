<div class="card p-3 mb-3">
  <h5><%= t('comments.form.add_comment') %></h5>

  <%= form_with(model: [movie, comment], local: true) do |f| %>
    
    <% if !user_signed_in? %>
      <div class="mb-3">
        <%= f.label :author_name %>
        <%= f.text_field :author_name, class: "form-control", placeholder: t('comments.form.author_name_placeholder') %>
      </div>
    <% else %>
      <%= f.hidden_field :author_name, value: current_user.name %>
    <% end %>

    <div class="mb-3">
      <%= f.label :content %>
      <%= f.text_area :content, rows: 3, class: "form-control", placeholder: t('comments.form.content_placeholder') %>
    </div>

    <%= f.submit t('comments.form.submit'), class: "btn btn-success" %>
  <% end %>
</div>