<div class="container mt-4">
  <h1 class="text-center mb-4">Catálogo de Filmes</h1>

  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
            <% if movie.image.attached? %>
              <%= image_tag movie.image, width: 200 %>
            <% else %>
              <div class="text-center border rounded p-4" style="width: 200px;">
                <div class="text-muted">
                  <i class="bi bi-image fs-1"></i>
                  <p class="mt-2 mb-0">Sem poster disponível</p>
                </div>
              </div>
            <% end %>
            <p class="card-text text-truncate"><%= movie.synopsis %></p>
            <a href="<%= movie_path(movie) %>" class="btn btn-primary btn-sm">Ver detalhes</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate @movies %>
  </div>
</div>
